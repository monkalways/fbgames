<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.homeHeader{
			margin-bottom: 10px;
		}

		.contentsPanelBack{
			padding :3px;
			background-color: #92C1F0;
			height: 100%;
			border-radius: 0 5px 5px 5px;
			-webkit-border-radius: 0 5px 5px 5px;
			-moz-border-radius:  0 5px 5px 5px;
		}

		.contentsPanel{
			background-color: white;
			padding: 3px;
			border-radius: 0 5px 5px 5px;
			-webkit-border-radius: 0 5px 5px 5px;
			-moz-border-radius:  0 5px 5px 5px;
		}
		.menuBar {
			width: 100%;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel>
			<g:SimplePanel addStyleNames="{style.homeHeader}" ui:field="homeHeaderPanel">
			</g:SimplePanel>
			<g:DecoratedTabBar addStyleNames="{style.menuBar}" ui:field="menuBar"/>
		</g:VerticalPanel>
		<div class="{style.contentsPanelBack}">
			<g:SimplePanel addStyleNames="{style.contentsPanel}" ui:field="contentsPanel"/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 