<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.vertialPanel
		{
			padding-bottom: 10px;
		}
		.gamesViewButtonHPanel
		{
			margin: 5px 0px 0x 5px;
        }
		.gamesViewContactsFlexTable
		{
			margin: 5px 0px 5px 0px; 
		}
		.white
		{
			color: white;
		}
	</ui:style>
	<ui:with type="ca.weiway.fbgames.client.bundle.FBGamesClientBundle"
		field="bundle"></ui:with>
	<g:HTMLPanel>
		<g:DecoratorPanel>
			<g:VerticalPanel addStyleNames="{style.vertialPanel}">
				<g:HorizontalPanel addStyleNames="{style.gamesViewButtonHPanel}">
					<g:Button ui:field="addButton">Add</g:Button>
					<g:Button ui:field="deleteButton">Delete</g:Button>
				</g:HorizontalPanel>
				<g:HorizontalPanel width="100%">
					<g:Cell horizontalAlignment="ALIGN_CENTER">
						<g:Image resource="{bundle.loading}" visible="false" 
							ui:field="loading"></g:Image>
					</g:Cell>
				</g:HorizontalPanel>
				<g:FlexTable ui:field="gamesTable"
					addStyleNames="{style.gamesViewContactsFlexTable}" />
			</g:VerticalPanel>
		</g:DecoratorPanel>
	</g:HTMLPanel>
</ui:UiBinder> 