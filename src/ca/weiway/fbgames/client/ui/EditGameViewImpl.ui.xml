<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.title
		{
			font-size: 10em;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:DecoratorPanel>
			<g:VerticalPanel>
				<g:Label addStyleNames="{style.title}" ui:field="pageTitle"></g:Label>
				<g:HorizontalPanel>
					<g:Label>Name</g:Label>
					<g:TextBox ui:field="txtName"></g:TextBox>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label>Price</g:Label>
					<g:TextBox ui:field="txtPrice"></g:TextBox>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Button ui:field="btnSave">Save</g:Button>
					<g:Button ui:field="btnCancel">Cancel</g:Button>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:DecoratorPanel>
	</g:HTMLPanel>
</ui:UiBinder> 